<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Alta Prenda</title>

    <!-- Bootstrap core CSS-->
    <link href="./styles/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="./styles/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="./styles/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="./styles/css/sb-admin.css" rel="stylesheet">

</head>

<body id="page-top">

{{>cliente/header.hbs}}

<div id="wrapper">

    {{>cliente/navBar.hbs}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    Alta de Prendas
                </div>

                <div class="card-body">
                    <form class="form-label-group" action="/altaPrenda" method="POST">
                        <div class="form-group col-md-8 ">
                            Tipos de Prendas
                            <select class="form-control form-control-lg" title="prenda" name="prenda" id="prenda">
                                    <option value="ParteSuperior">Parte Superior</option>
                                    <option value="ParteInferior">Parte Inferior</option>
                                    <option value="Calzado">Calzado</option>
                                    <option value="Abrigo">Abrigo</option>
                                    <option value="Accesorio">Accesorio</option>
                                    <option value="AccesorioAbrigo">Accesorio - Abrigo</option>
                            </select>
                        </div>
                        <div class="form-group" align="right">
                            <p>
                                <button class="btn btn-lg btn-primary" type="submit">Aceptar</button>
                            </p>
                        </div>
                    </form>
                </div>
            </div>


        </div>

    </div>

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
{{>cliente/logoutModel.hbs}}
{{>cliente/scripts.hbs}}

