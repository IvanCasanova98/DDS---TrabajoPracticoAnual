<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Alta Evento</title>

    <!-- Bootstrap core CSS-->
    <link href="./styles/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="./styles/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="./styles/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="./styles/css/sb-admin.css" rel="stylesheet">

</head>

<script>
    function hoy() {
        return new Date()
    }
</script>

<body id="page-top">

{{>cliente/header.hbs}}

<div id="wrapper">

    {{>cliente/navBar.hbs}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    Alta de Calzado
                </div>

                <div class="card-body">
                    <form class="form-label-group" action="/altaEvento" method="POST">
                        Descripcion
                        <input class="form-control" type="text" id="descripcion" name="descripcion" placeholder="Ingrese nombre de evento" required autofocus/>
                        Ciudad
                        <input class="form-control" type="text" id="ciudad" name="ciudad" placeholder="Ingrese ciudad del evento" required autofocus/>
                        Fecha del Evento
                        <input type="date" class="form-control" id="fechaEvento" required="required" placeholder="fecha de evento (dd/mm/aaaa)"  name="fechaEvento" min={{hoy}}/>
                        Hora
                        <input class="form-control" type="text" id="hora" name="hora" placeholder="A que hora" required autofocus/>
                        Minutos
                        <input class="form-control" type="text" id="minutos" name="minutos" placeholder="A que minutos" required autofocus/>
                        Cada Cuanto se repetira (0 si es de unica vez)
                        <input class="form-control" type="text" id="cadaCuanto" name="cadaCuanto" placeholder="Cada cuanto se repetira?" required autofocus/>
                        <div class="form-group" align="right">
                            <p>
                                <button class="btn btn-lg btn-primary" type="submit">Crear Evento</button>
                            </p>
                        </div>
                    </form>
                </div>
            </div>


        </div>

    </div>

</div>
<!-- /#wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
{{>cliente/logoutModel.hbs}}
{{>cliente/scripts.hbs}}

</body>

</html>