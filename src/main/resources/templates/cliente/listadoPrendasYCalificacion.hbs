<script>
    function modificarPuntaje() {
        $.ajax({
            url: "/modificarPuntajes",
            type: "post",
            success: function () {
                location.reload();
            }
        });
    }
    function mostrarPrendasAtuendo() {
        $.ajax({
            url: "/sugerencias",
            type: "post",
            success: function () {
                location.reload();
            }
        });
    }
    function getElement(name) {
        return document.getElementById(name);
    }
</script>

<div id="wrapper">

    {{>cliente/navBar.hbs}}

    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    Puntuacion de Atuendos</div>
                <div class="card-body">
                    <div class="table-responsive">
                    </div>
                    <br>


                        Atuendos Del Usuario
                    <form action="/listadoPrendasYCalificacion" method="POST">
                        <select class="form-control" title="atuendo" name="atuendo" id="sm">
                            {{#each atuendo}}
                                <option value="{{iD}}">{{iD}}</option>
                            {{/each}}
                        </select>
                        <button class="btn btn-lg btn-primary btn-block" onclick="mostrarPrendasAtuendo()" >Mostrar Prendas del Atuendo</button>
                    </form>

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Parte</th>
                            <th>Tipo</th>
                            <th>Material</th>
                            <th>Color Primario</th>
                            <th>Color Secundario</th>
                            <th>Puntaje</th>
                        </tr>
                        </thead>

                        <tbody>

                            <form action="/modificarPuntajes" method="POST">
                                {{#each table}}
                                    <tr>
                                        <td>{{iD}}</td>
                                        <td>{{parte}}</td>
                                        <td>{{tipo}}</td>
                                        <td>{{material}}</td>
                                        <td>{{color_primario}}</td>
                                        <td>{{color_secundario}}</td>

                                            <td> <select class="form-control" title="{{iD}}" name="{{iD}}" id="{{iD}}" required="required">
                                                <option value=1>1</option>
                                                <option value=2>2</option>
                                                <option value=3>3</option>
                                                <option value=4>4</option>
                                                <option value=5>5</option>
                                                <option value=6>6</option>
                                                <option value=7>7</option>
                                                <option value=8>8</option>
                                                <option value=9>9</option>
                                                <option value=10>10</option>
                                            </select> </td>
                                    </tr>
                                {{/each}}

                                <button class="btn btn-lg btn-primary btn-block" onclick="modificarPuntaje()">Aplicar Puntajes</button>
                            </form>


                        </tbody>
                    </table>

